<Window
    x:Class="Jarvis.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Jarvis.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="PermissionBanner" 
                Background="Orange" 
                Visibility="Collapsed"
                Grid.Row="0">
            <TextBlock x:Name="PermissionText" 
                      Text="Jarvis wants to perform an action. Approve?" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Margin="10"/>
        </Border>

        <StackPanel Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center">
            <TextBlock Text="Jarvis AI Assistant" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
            <TextBlock x:Name="StatusText" 
                      Text="Listening for 'Hey Jarvis'..." 
                      HorizontalAlignment="Center" 
                      Margin="0,10,0,0"/>
            <ProgressRing x:Name="ListeningIndicator" 
                         IsActive="True" 
                         Width="50" 
                         Height="50" 
                         Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>